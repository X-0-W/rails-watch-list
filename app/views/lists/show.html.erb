<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <h1> <%= @list.name %> </h1>
  <h5 class="button-inset"> <%= @list.bookmarks.count %> movies </h5>
</div>


<div class="container flex">

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src= <%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"> <%= bookmark.movie.title %> <span class>| <%= bookmark.movie.rating %> </span>‚≠ê </h5>
        <p class="card-text"> <%= bookmark.movie.overview %> </p>
        <p> <%= link_to "delete", bookmark_path(bookmark), method: :delete, class: "text-danger", data: { confirm: "Are you sure?" } %> </p>
      </div>
    </div>
  <% end %>

</div>

<%= link_to "Add movie to list", new_list_bookmark_path(@list) %>
<%= link_to "Return to lists", lists_path %>
